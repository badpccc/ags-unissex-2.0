<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ModalNovoUsuarioController"
            stylesheets="@css/modal.css"
            styleClass="modal-root"
            prefWidth="520" prefHeight="600">

    <!-- SCROLLPANE -->
    <ScrollPane fitToWidth="true"
                vbarPolicy="AS_NEEDED"
                hbarPolicy="NEVER"
                AnchorPane.topAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                AnchorPane.bottomAnchor="0">

        <VBox spacing="25"
              alignment="TOP_CENTER"
              styleClass="modal-container">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- TÍTULO DO MODAL -->
            <Label text="➕ Novo Usuário" styleClass="modal-title"/>

            <!-- FORMULÁRIO -->
            <VBox spacing="18" styleClass="form-wrapper">

                <!-- Nome -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Nome Completo" styleClass="field-label"/>
                    <TextField fx:id="txtNome" promptText="Digite o nome completo" styleClass="input-field"/>
                </VBox>

                <!-- Email -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Email" styleClass="field-label"/>
                    <TextField fx:id="txtEmail" promptText="exemplo@empresa.com" styleClass="input-field"/>
                </VBox>

                <!-- Senha -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Senha" styleClass="field-label"/>
                    <PasswordField fx:id="txtSenha" promptText="Digite a senha" styleClass="input-field"/>
                </VBox>

                <!-- Tipo -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Tipo de Usuário" styleClass="field-label"/>
                    <ComboBox fx:id="cmbTipo" promptText="Selecione o tipo" styleClass="input-field" prefWidth="Infinity" maxWidth="Infinity"/>
                </VBox>

                <!-- Telefone -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Telefone" styleClass="field-label"/>
                    <TextField fx:id="txtTelefone" promptText="(00) 00000-0000" styleClass="input-field"/>
                </VBox>

                <!-- CPF -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="CPF" styleClass="field-label"/>
                    <TextField fx:id="txtCpf" promptText="000.000.000-00" styleClass="input-field"/>
                </VBox>

                <!-- Data de Contratação -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Data de Contratação" styleClass="field-label"/>
                    <DatePicker fx:id="dpDataContratacao" promptText="Selecione a data" styleClass="input-field" prefWidth="Infinity" maxWidth="Infinity"/>
                </VBox>

                <!-- Ativo -->
                <VBox spacing="5" styleClass="field-group">
                    <CheckBox fx:id="chkAtivo" text="Usuário ativo" selected="true"/>
                </VBox>

                <!-- Observações -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Observações" styleClass="field-label"/>
                    <TextArea fx:id="txtObservacoes" promptText="Notas adicionais..." prefRowCount="3" styleClass="input-field"/>
                </VBox>

            </VBox>

            <!-- BOTÕES -->
            <HBox spacing="20" alignment="CENTER_RIGHT" styleClass="modal-buttons">
                <Button text="Cancelar" styleClass="btn-cancelar" onAction="#fecharModal"/>
                <Button text="Salvar" styleClass="btn-salvar" onAction="#salvar"/>
            </HBox>

        </VBox>

    </ScrollPane>

</AnchorPane>
