<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.NovoClienteController"
            stylesheets="@css/modal.css"
            styleClass="modal-root"
            prefWidth="520" prefHeight="600">

    <!-- SCROLLPANE -->
    <ScrollPane fitToWidth="true"
                vbarPolicy="AS_NEEDED"
                hbarPolicy="NEVER"
                AnchorPane.topAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                AnchorPane.bottomAnchor="0">

        <VBox spacing="25"
              alignment="TOP_CENTER"
              styleClass="modal-container">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- TÍTULO DO MODAL -->
            <Label text="➕ Novo Cliente" styleClass="modal-title"/>

            <!-- FORMULÁRIO -->
            <VBox spacing="18" styleClass="form-wrapper">

                <!-- Nome -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Nome" styleClass="field-label"/>
                    <TextField fx:id="txtNome" promptText="Digite o nome completo" styleClass="input-field"/>
                    <Label fx:id="lblErroNome" styleClass="error-label"/>
                </VBox>

                <!-- Telefone -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Telefone" styleClass="field-label"/>
                    <TextField fx:id="txtTelefone" promptText="(00) 00000-0000" styleClass="input-field"/>
                    <Label fx:id="lblErroTelefone" styleClass="error-label"/>
                </VBox>

                <!-- Email -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Email" styleClass="field-label"/>
                    <TextField fx:id="txtEmail" promptText="exemplo@empresa.com" styleClass="input-field"/>
                    <Label fx:id="lblErroEmail" styleClass="error-label"/>
                </VBox>

                <!-- Endereço -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Endereço" styleClass="field-label"/>
                    <TextField fx:id="txtAddress" promptText="Rua, Número, Bairro" styleClass="input-field"/>
                    <Label fx:id="lblErroEndereco" styleClass="error-label"/>
                </VBox>

                <!-- Cliente Ativo -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Ativo" styleClass="field-label"/>
                    <CheckBox fx:id="chkAtivo" text="Cliente está ativo?"/>
                </VBox>

                <!-- Tipo de cabelo -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Tipo de Cabelo" styleClass="field-label"/>
                    <ComboBox fx:id="cbHairType" promptText="Selecione" styleClass="input-field"/>
                    <Label fx:id="lblErroHairType" styleClass="error-label"/>
                </VBox>

                <!-- Textura -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Textura" styleClass="field-label"/>
                    <ComboBox fx:id="cbHairTexture" promptText="Selecione" styleClass="input-field"/>
                    <Label fx:id="lblErroHairTexture" styleClass="error-label"/>
                </VBox>

                <!-- Couro Cabeludo -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Couro Cabeludo" styleClass="field-label"/>
                    <ComboBox fx:id="cbScalp" promptText="Selecione" styleClass="input-field"/>
                    <Label fx:id="lblErroScalp" styleClass="error-label"/>
                </VBox>

                <!-- Alergias -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Alergias" styleClass="field-label"/>
                    <TextField fx:id="txtAllergies" promptText="Alergias ou sensibilidades" styleClass="input-field"/>
                </VBox>

                <!-- Última Visita -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Última Visita" styleClass="field-label"/>
                    <DatePicker fx:id="dpLastVisit" promptText="Selecione a data" styleClass="input-field"/>
                </VBox>

                <!-- Observações -->
                <VBox spacing="5" styleClass="field-group">
                    <Label text="Observações" styleClass="field-label"/>
                    <TextArea fx:id="txtObservations" promptText="Notas adicionais..." prefRowCount="3" styleClass="input-field"/>
                </VBox>

            </VBox>

            <!-- BOTÕES -->
            <HBox spacing="20" alignment="CENTER_RIGHT" styleClass="modal-buttons">
                <Button text="Cancelar" styleClass="btn-cancelar" onAction="#fechar"/>
                <Button text="Salvar" styleClass="btn-salvar" onAction="#salvar"/>
            </HBox>

        </VBox>

    </ScrollPane>

</AnchorPane>
