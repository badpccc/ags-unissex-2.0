<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.SecondaryController"
            stylesheets="@style.css"
            prefHeight="720.0" prefWidth="1280.0">

    <!-- MENU LATERAL -->
    <left>
        <BorderPane styleClass="sidebar">

            <!-- Título do menu -->
            <top>
                <VBox alignment="CENTER">
                    <Label text="Menu" styleClass="sidebar-title"/>
                </VBox>
            </top>

            <!-- Botões centrais -->
            <center>

                <VBox alignment="CENTER" spacing="20">
                    <Button text="Dashboard"
                            fx:id="menuDashboard"
                            styleClass="sidebar-itemdev"/>

                    <Button text="Clientes"
                            fx:id="menuClientes"
                            styleClass="sidebar-item"/>

                    <Button text="Agendamentos"
                            fx:id="menuAgendamentos"
                            styleClass="sidebar-item"/>

                    <Button text="Serviços"
                            fx:id="menuServicos"
                            styleClass="sidebar-item"/>
                </VBox>
            </center>


            <!-- Botão sair fixado embaixo -->
            <bottom>
                <VBox alignment="BOTTOM_CENTER" spacing="0" prefWidth="200" style="-fx-background-color: transparent;">
                    <Button text="Logout"
                            onAction="#switchToPrimary"
                            styleClass="sidebar-exit"
                            maxWidth="Infinity" />
                </VBox>
            </bottom>

        </BorderPane>
    </left>

    <!-- TOPO -->


    <!-- CONTEÚDO PRINCIPAL -->
    <center>
        <StackPane fx:id="conteudoArea" styleClass="content-area">
            <Label text="Selecione uma opção no menu"
                   styleClass="placeholder-text"/>
        </StackPane>
    </center>

</BorderPane>
