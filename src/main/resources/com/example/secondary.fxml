<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.SecondaryController"
            stylesheets="@style.css">

    <!-- MENU LATERAL -->
    <left>
        <VBox spacing="12" styleClass="sidebar">
            <Label text="Menu" styleClass="sidebar-title"/>

            <Button text="Clientes"
                    fx:id="menuClientes"
                    styleClass="sidebar-item"/>

            <Button text="Agendamentos"
                    fx:id="menuAgendamentos"
                    styleClass="sidebar-item"/>

            <Button text="Serviços"
                    fx:id="menuServicos"
                    styleClass="sidebar-item"/>

            <Button text="Sair"
                    onAction="#switchToPrimary"
                    styleClass="sidebar-exit"/>
        </VBox>
    </left>

    <!-- TOPO -->
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header">
            <Label text="Dashboard" styleClass="header-title"/>
        </HBox>
    </top>

    <!-- CONTEÚDO PRINCIPAL -->
    <center>
        <StackPane fx:id="conteudoArea" styleClass="content-area">
            <Label text="Selecione uma opção no menu"
                   styleClass="placeholder-text"/>
        </StackPane>
    </center>

</BorderPane>
