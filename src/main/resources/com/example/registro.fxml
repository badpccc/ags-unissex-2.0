                </VBox>

                <!-- Mensagem -->
                <Label fx:id="lblMessage" styleClass="error-label" text="" 
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10;"/>

                <!-- BotÃ£o Registrar -->
