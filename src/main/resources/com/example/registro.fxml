                <!-- SUBTÃTULO -->
                <HBox alignment="CENTER" style="-fx-padding: 0 0 10 0;">
                    <Label text="ðŸ’ˆ AGS-Unissex" styleClass="subtitle-label"/>
                </HBox>

                <!-- Nome Completo -->
                <VBox spacing="8" alignment="CENTER_LEFT" maxWidth="450">
                    <Label text="Nome Completo *" styleClass="field-label"/>
                    <TextField fx:id="txtFullName" promptText="Digite seu nome completo" 
                               prefWidth="450" maxWidth="450"/>
                </VBox>

                <!-- UsuÃ¡rio -->
                <VBox spacing="8" alignment="CENTER_LEFT" maxWidth="450">
