<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>

<AnchorPane fx:id="cardAgendamento" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.CardAgendamentoController"
            prefWidth="420" prefHeight="460"
            style="-fx-background-color: white; -fx-background-radius: 15;
                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 3);">

    <VBox alignment="CENTER" spacing="12"
          AnchorPane.topAnchor="15"
          AnchorPane.leftAnchor="15"
          AnchorPane.rightAnchor="15">

        <!-- Título -->
        <Label text="Novo Agendamento">
            <font>
                <Font name="Arial Bold" size="20"/>
            </font>
        </Label>

        <!-- Campos principais -->
        <TextField fx:id="txtClienteNome" promptText="Nome do cliente"
                   style="-fx-background-radius: 8; -fx-padding: 8;"/>
        <TextField fx:id="txtServico" promptText="Serviço"
                   style="-fx-background-radius: 8; -fx-padding: 8;"/>

        <!-- Data e hora -->
        <HBox spacing="10">
            <DatePicker fx:id="dateAgendamento" promptText="Data"
                        style="-fx-background-radius: 8;"/>
            <TextField fx:id="txtHora" promptText="Hora (ex: 14:30)"
                       style="-fx-background-radius: 8; -fx-padding: 8;"/>
        </HBox>

        <!-- Observações -->
        <TextArea fx:id="txtObservacoes"
                  promptText="Observações"
                  prefRowCount="3"
                  wrapText="true"
                  style="-fx-background-radius: 8; -fx-padding: 8;"/>

        <!-- Status -->
        <ComboBox fx:id="cbStatus" promptText="Status"
                  style="-fx-background-radius: 8; -fx-padding: 6;">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Pendente"/>
                    <String fx:value="Confirmado"/>
                    <String fx:value="Concluído"/>
                    <String fx:value="Cancelado"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Botão -->
        <Button text="Salvar Agendamento"
                onAction="#salvarAgendamento"
                style="-fx-background-color: linear-gradient(to right, #4CAF50, #2E7D32);
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 8;
                       -fx-padding: 10 18;
                       -fx-cursor: hand;
                       -fx-font-size: 14;"/>

    </VBox>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</AnchorPane>
