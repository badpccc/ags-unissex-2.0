<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.ClientesController"
      spacing="25"
      alignment="TOP_CENTER"
      stylesheets="@clientes.css"
      styleClass="container-fundo">

    <!-- ===================== CABEÃ‡ALHO ===================== -->
    <HBox spacing="15"
          alignment="CENTER_LEFT"
          styleClass="header-clientes">

        <Label text="Clientes"
               styleClass="titulo-clientes" />

        <Button fx:id="btnAdicionarCliente"
                text="Adicionar Cliente"
                styleClass="btn-add" />
    </HBox>

    <!-- ===================== LISTA DE CLIENTES ===================== -->
    <ScrollPane fitToWidth="true"
                pannable="true"
                hbarPolicy="NEVER"
                vbarPolicy="AS_NEEDED"
                styleClass="scroll-base"
                style="-fx-padding: 0 15 15 15;">

        <VBox fx:id="listaClientes"
              spacing="20"
              styleClass="lista-tabela"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" />

    </ScrollPane>

</VBox>
