<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ClientesController"
            stylesheets="@css/clientes.css"
            styleClass="root">

    <!-- ===================================================== -->
    <!--                     CABEÇALHO                         -->
    <!-- ===================================================== -->
    <top>
        <HBox spacing="20"
              alignment="CENTER_LEFT"
              styleClass="clientes-header">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Clientes" styleClass="clientes-title"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <TextField fx:id="txtBuscarCliente"
                       promptText="Pesquisar cliente..."
                       styleClass="clientes-search"/>

            <Button fx:id="btnAdicionarCliente"
                    text="Adicionar Cliente"
                    styleClass="btn-primario"/>
        </HBox>
    </top>

    <!-- ===================================================== -->
    <!--                   ÁREA PRINCIPAL                      -->
    <!-- ===================================================== -->
    <center>
        <VBox styleClass="tabela-container">


            <ScrollPane fitToWidth="true"
                        pannable="true"
                        hbarPolicy="NEVER"
                        vbarPolicy="AS_NEEDED"
                        styleClass="scroll-clientes">

                <VBox fx:id="listaClientes"
                      spacing="8"
                      styleClass="lista-clientes"/>

            </ScrollPane>

        </VBox>
    </center>

</BorderPane>
