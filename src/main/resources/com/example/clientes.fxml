<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ClientesController"
            stylesheets="@css/clientes.css">

    <!-- ===================================================== -->
    <!--                     CABEÇALHO                         -->
    <!-- ===================================================== -->
    <top>
        <HBox spacing="20"
              alignment="CENTER_LEFT"
              styleClass="clientes-header">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Título -->
            <Label text="Clientes" styleClass="clientes-title"/>

            <!-- Espaçador -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Campo de busca -->
            <TextField fx:id="txtBuscarCliente"
                       promptText="Pesquisar cliente..."
                       styleClass="clientes-search"/>

            <!-- Botão adicionar -->
            <Button fx:id="btnAdicionarCliente"
                    text="Adicionar Cliente"
                    styleClass="btn-primario"/>
        </HBox>
    </top>

    <!-- ===================================================== -->
    <!--                    ÁREA PRINCIPAL                     -->
    <!-- ===================================================== -->
    <center>
        <ScrollPane fitToWidth="true"
                    pannable="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    styleClass="scroll-clientes">

            <VBox fx:id="listaClientes"
                  spacing="12"
                  styleClass="lista-clientes">

                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- CARD MODELO (remover quando integrar) -->
                <HBox spacing="20" styleClass="cliente-card">

                    <Pane HBox.hgrow="ALWAYS"/>

                    <Button text="Editar" styleClass="btn-editar"/>
                    <Button text="Excluir" styleClass="btn-excluir"/>

                </HBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
