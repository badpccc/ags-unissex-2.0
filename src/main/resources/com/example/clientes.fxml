<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.ClientesController"
      spacing="25"
      alignment="TOP_CENTER"
      stylesheets="@clientes.css"
      styleClass="container-fundo">

    <!-- CabeÃ§alho -->
    <HBox spacing="15"
          alignment="CENTER_LEFT"
          styleClass="header-clientes">

        <Label text="Clientes"
               styleClass="titulo-clientes" />

        <Button text="Adicionar Cliente"
                fx:id="btnAdicionarCliente"
                styleClass="btn-add" />
    </HBox>

    <!-- Lista de Clientes -->
    <ScrollPane fitToWidth="true"
                pannable="true"
                hbarPolicy="NEVER"
                vbarPolicy="AS_NEEDED"
                styleClass="scroll-base"
                style="-fx-padding: 0 15 15 15;">

        <AnchorPane>
            <VBox fx:id="listaClientes"
                  spacing="20"
                  styleClass="lista-tabela"
                  layoutX="0"
                  layoutY="0"
                  AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0" />
        </AnchorPane>

    </ScrollPane>

</VBox>
