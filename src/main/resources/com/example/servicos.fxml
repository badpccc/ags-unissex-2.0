<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ServicosController"
            prefWidth="900" prefHeight="600"
            stylesheets="@css/servicos.css"
            styleClass="root">

    <!-- ===================================================== -->
    <!--                     CABEÇALHO                         -->
    <!-- ===================================================== -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="header-servicos">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Serviços" styleClass="titulo-servicos"/>

            <!-- Espaçador -->
            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Campo de busca -->
            <TextField fx:id="txtBuscar"
                       promptText="Pesquisar serviço..."/>

            <!-- Botão Novo Serviço -->
            <Button fx:id="btnNovoServico"
                    text="Novo Serviço"
                    styleClass="btn-novo-servico"/>
        </HBox>
    </top>

    <!-- ===================================================== -->
    <!--                    ÁREA PRINCIPAL                     -->
    <!-- ===================================================== -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-base">
            <VBox fx:id="listaServicos"
                  spacing="12"
                  styleClass="servicos-list">

                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- ============================= -->
                <!--     CARD EXEMPLO (REMOVER)    -->
                <!-- ============================= -->
                <HBox spacing="20" styleClass="servico-item">

                    <VBox spacing="4">
                        <Label text="Corte Masculino" styleClass="servico-nome"/>
                        <Label text="Duração: 30 min" styleClass="servico-tempo"/>
                    </VBox>

                    <Pane HBox.hgrow="ALWAYS"/>

                    <Label text="R$ 25,00" styleClass="servico-preco"/>

                    <Button text="Editar" styleClass="btn-editar"/>
                    <Button text="Excluir" styleClass="btn-excluir"/>

                </HBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
