<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ServicosController"
            prefWidth="900" prefHeight="600"
            stylesheets="@css/servicos.css"
            styleClass="root">

    <!-- ===================================================== -->
    <!--                     CABEÇALHO                         -->
    <!-- ===================================================== -->
    <top>
        <HBox spacing="20"
              alignment="CENTER_LEFT"
              styleClass="ag-header">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Serviços"
                   styleClass="ag-title"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Campo de busca -->
            <TextField fx:id="txtBuscar"
                       promptText="Buscar serviço..."
                       styleClass="ag-search"/>

            <Button fx:id="btnNovoServico"
                    text="Novo Serviço"
                    styleClass="btn-primario"
                    onAction="#novoServico"/>

        </HBox>
    </top>

    <!-- ===================================================== -->
    <!--                    ÁREA PRINCIPAL                     -->
    <!-- ===================================================== -->
    <center>
        <ScrollPane fitToWidth="true"
                    styleClass="ag-scroll">

            <VBox fx:id="listaServicos"
                  spacing="12"
                  styleClass="ag-lista">

                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- Os serviços serão carregados dinamicamente aqui -->

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
