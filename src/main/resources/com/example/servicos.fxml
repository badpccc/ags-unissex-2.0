<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ServicosController"
            fitToWidth="true"
            stylesheets="@servicos.css">

    <VBox fx:id="listaServicos" spacing="12" styleClass="services-container">
        <!-- Linha modelo (será clonada via código) -->
        <HBox spacing="16" styleClass="service-item">
            <Label text="Serviço" styleClass="service-name" />
            <Label text="R$ 00,00" styleClass="service-price" />
            <Label text="00 min" styleClass="service-time" />
            <Button text="Editar" styleClass="btn-edit" />
            <Button text="Excluir" styleClass="btn-delete" />
        </HBox>
    </VBox>
</ScrollPane>