<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.ServicosController"
            prefWidth="900" prefHeight="600"
            stylesheets="@css/servicos.css">

    <!-- ===================================================== -->
    <!--                     CABEÇALHO                         -->
    <!-- ===================================================== -->
    <top>
        <HBox spacing="20"
              alignment="CENTER_LEFT"
              styleClass="ag-header">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Serviços"
                   styleClass="ag-title"/>

            <Pane HBox.hgrow="ALWAYS"/>

            <!-- Campo de busca -->
            <TextField fx:id="txtBuscar"
                       promptText="Buscar serviço..."
                       styleClass="ag-search"/>

            <Button fx:id="btnNovoServico"
                    text="Novo Serviço"
                    styleClass="btn-primario"
                    onAction="#novoServico"/>

        </HBox>
    </top>

    <!-- ===================================================== -->
    <!--                    ÁREA PRINCIPAL                     -->
    <!-- ===================================================== -->
    <center>
        <VBox spacing="10" styleClass="servicos-content">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Tabela de Serviços -->
            <TableView fx:id="tabelaServicos" 
                       styleClass="servicos-table"
                       VBox.vgrow="ALWAYS">
                       
                <columns>
                    <TableColumn fx:id="colNome" 
                                 text="Nome" 
                                 prefWidth="200"
                                 minWidth="150"/>
                                 
                    <TableColumn fx:id="colCategoria" 
                                 text="Categoria" 
                                 prefWidth="120"
                                 minWidth="100"/>
                                 
                    <TableColumn fx:id="colPreco" 
                                 text="Preço" 
                                 prefWidth="100"
                                 minWidth="80"/>
                                 
                    <TableColumn fx:id="colDuracao" 
                                 text="Duração" 
                                 prefWidth="100"
                                 minWidth="80"/>
                                 
                    <TableColumn fx:id="colDescricao" 
                                 text="Descrição" 
                                 prefWidth="300"
                                 minWidth="200"/>
                </columns>
            </TableView>
            
            <!-- Botões de Ação -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Editar Serviço"
                        styleClass="btn-editar"
                        onAction="#editarServico"/>
                        
                <Button text="Excluir Serviço"
                        styleClass="btn-excluir"
                        onAction="#excluirServico"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
