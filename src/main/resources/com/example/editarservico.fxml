<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="600" prefHeight="520"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.EditarServicoController"
            stylesheets="@css/editarservico.css">

    <children>
        <VBox styleClass="editar-container"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0"
              AnchorPane.bottomAnchor="0"
              alignment="CENTER"
              spacing="20">

            <Label text="✏️ Editar Serviço" styleClass="editar-title"/>

            <!-- Nome -->
            <VBox spacing="8">
                <Label text="Nome do Serviço" styleClass="editar-label"/>
                <TextField fx:id="txtNome" 
                          promptText="Ex: Corte Masculino"
                          styleClass="text-field"/>
            </VBox>

            <!-- Preço -->
            <VBox spacing="8">
                <Label text="Preço (R$)" styleClass="editar-label"/>
                <TextField fx:id="txtPreco" 
                          promptText="Ex: 25.00"
                          styleClass="text-field"/>
            </VBox>

            <!-- Duração -->
            <VBox spacing="8">
                <Label text="Duração (minutos)" styleClass="editar-label"/>
                <TextField fx:id="txtDuracao" 
                          promptText="Ex: 30"
                          styleClass="text-field"/>
            </VBox>

            <!-- Categoria -->
            <VBox spacing="8">
                <Label text="Categoria" styleClass="editar-label"/>
                <TextField fx:id="txtCategoria" 
                          promptText="Ex: Cabelo"
                          styleClass="text-field"/>
            </VBox>

            <!-- Descrição -->
            <VBox spacing="8">
                <Label text="Descrição" styleClass="editar-label"/>
                <TextArea fx:id="txtDescricao" 
                         promptText="Descrição do serviço..."
                         prefRowCount="3"
                         wrapText="true"
                         styleClass="text-field"/>
            </VBox>

            <!-- Serviço Ativo -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <CheckBox fx:id="chkAtivo" 
                         text="Serviço ativo?"
                         selected="true"
                         styleClass="editar-label"/>
            </HBox>

            <!-- Botões -->
            <HBox spacing="12" alignment="CENTER">
                <Button text="Cancelar" 
                       styleClass="btn-cancelar"
                       onAction="#cancelar"
                       prefWidth="120"/>
                <Button text="Salvar Alterações" 
                       styleClass="btn-salvar"
                       onAction="#salvar"
                       prefWidth="160"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
