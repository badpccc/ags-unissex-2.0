<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.NovoClienteController"
            stylesheets="@css/modal.css"
            styleClass="modal-root"
            prefWidth="520" prefHeight="600">

    <!-- SCROLLPANE -->
    <ScrollPane fitToWidth="true"
                vbarPolicy="AS_NEEDED"
                hbarPolicy="NEVER"
                AnchorPane.topAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                AnchorPane.bottomAnchor="0">

        <VBox spacing="25"
              alignment="TOP_CENTER"
              styleClass="modal-container">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- TÍTULO DO MODAL -->
            <Label text="➕ Novo Cliente" styleClass="modal-title"/>

            <!-- FORMULÁRIO -->
            <VBox spacing="18" styleClass="form-wrapper">

                <!-- Dados Básicos -->
                <VBox spacing="10" styleClass="field-group">
                    <Label text="Nome" styleClass="field-label"/>
                    <TextField fx:id="txtNome" promptText="Nome completo" styleClass="input-field"/>
                    <Label fx:id="lblErroNome" styleClass="error-label"/>
                </VBox>

                <VBox spacing="10" styleClass="field-group">
                    <Label text="Telefone" styleClass="field-label"/>
                    <TextField fx:id="txtTelefone" promptText="(00) 00000-0000" styleClass="input-field"/>
                    <Label fx:id="lblErroTelefone" styleClass="error-label"/>
                </VBox>

                <VBox spacing="10" styleClass="field-group">
                    <Label text="E-mail" styleClass="field-label"/>
                    <TextField fx:id="txtEmail" promptText="email@exemplo.com" styleClass="input-field"/>
                    <Label fx:id="lblErroEmail" styleClass="error-label"/>
                </VBox>

                <VBox spacing="10" styleClass="field-group">
                    <Label text="Endereço" styleClass="field-label"/>
                    <TextField fx:id="txtAddress" promptText="Rua, Número, Bairro" styleClass="input-field"/>
                    <Label fx:id="lblErroEndereco" styleClass="error-label"/>
                </VBox>

                <VBox spacing="10" styleClass="field-group">
                    <CheckBox fx:id="chkAtivo" text="Cliente ativo?"/>
                </VBox>

                <!-- Informações Capilares -->
                <VBox spacing="10" styleClass="field-group">
                    <Label text="Tipo de cabelo" styleClass="field-label"/>
                    <ComboBox fx:id="cbHairType" styleClass="input-field"/>
                    <Label fx:id="lblErroHairType" styleClass="error-label"/>
                </VBox>

                <VBox spacing="10" styleClass="field-group">
                    <Label text="Textura do cabelo" styleClass="field-label"/>
                    <ComboBox fx:id="cbHairTexture" styleClass="input-field"/>
                    <Label fx:id="lblErroHairTexture" styleClass="error-label"/>
                </VBox>

                <VBox spacing="10" styleClass="field-group">
                    <Label text="Couro cabeludo" styleClass="field-label"/>
                    <ComboBox fx:id="cbScalp" styleClass="input-field"/>
                    <Label fx:id="lblErroScalp" styleClass="error-label"/>
                </VBox>

                <VBox spacing="10" styleClass="field-group">
                    <Label text="Alergias" styleClass="field-label"/>
                    <TextField fx:id="txtAllergies" promptText="Alergias ou sensibilidades" styleClass="input-field"/>
                </VBox>

                <VBox spacing="10" styleClass="field-group">
                    <Label text="Última visita" styleClass="field-label"/>
                    <DatePicker fx:id="dpLastVisit" styleClass="input-field"/>
                </VBox>

                <VBox spacing="10" styleClass="field-group">
                    <Label text="Observações" styleClass="field-label"/>
                    <TextArea fx:id="txtObservations" promptText="Observações gerais" prefRowCount="3" styleClass="input-field"/>
                </VBox>

            </VBox>

            <!-- BOTÕES -->
            <HBox fx:id="hboxBotoes" styleClass="btn-container" spacing="20" alignment="CENTER">

                <Button fx:id="btnSalvar" text="Salvar" styleClass="btn-add"/>
                <Button fx:id="btnCancelar" text="Cancelar" styleClass="btn-delete"/>
                <!-- Se quiser, mantenha o botão Editar ou remova -->
                <!-- <Button fx:id="btnEditar" text="Editar" styleClass="btn-edit"/> -->

            </HBox>



        </VBox>

    </ScrollPane>

</AnchorPane>
