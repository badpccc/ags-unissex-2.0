<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.PaginaNeutraController"
            stylesheets="@css/style.css"
            styleClass="content-area">

    <!-- CONTEÚDO CENTRAL -->
    <VBox alignment="CENTER" spacing="25"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <!-- Ícone (Emoji opcional) -->
        <Label text="⚠️"
               style="-fx-font-size: 4.5em;"/>

        <!-- Título -->
        <Label text="ERRO - RETORNE AO DASHBOARD"
               styleClass="placeholder-text"/>

        <!-- Descrição -->
        <Label text="Parece que teve um pequeno problema, clique no botão para retornar ao Dashboard"
               style="-fx-font-size: 1.4em; -fx-text-fill: #d0d0d0;"/>

        <!-- Botão voltar -->
        <Button text="Voltar"
                onAction="#voltar"
                styleClass="btn-add"/>
    </VBox>

</AnchorPane>
